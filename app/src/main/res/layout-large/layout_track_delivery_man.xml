<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/trackMap"
        android:layout_width="match_parent"
        android:layout_height="438dp"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_above="@+id/tableRow3" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:id="@+id/tableRow"
        android:layout_above="@+id/tableRow2"
        android:layout_alignParentStart="true"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/deliverymanNum"
            android:id="@+id/deliverymanNumTextView"
            android:textColor="#ff000000"
            style="@style/my_font_medium"
            android:width="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dManNumText"
            style="@style/my_font_medium"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:id="@+id/tableRow2"
        android:layout_above="@+id/customCallButton"
        android:layout_alignParentStart="true"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/dManName"
            android:id="@+id/dManNameTextView"
            style="@style/my_font_medium"
            android:width="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dManNameText"
            style="@style/my_font_medium"
            android:gravity="center" />
    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customCallButton"
        android:background="@drawable/call"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tractButton"
        android:background="@drawable/track"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableRow"
        android:layout_alignParentStart="true"
        android:id="@+id/tableRow3"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Esitmated Delivery Time   "
            android:id="@+id/deliveryTimeTextView"
            android:textSize="30dp"
            android:layout_above="@+id/tableRow"
            android:layout_alignParentStart="true"
            style="@style/my_font_medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/durationTextView"
            android:textSize="30dp"
            android:layout_above="@+id/tableRow"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="43dp"
            style="@style/my_font_medium" />
    </TableRow>


</RelativeLayout>