<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/my_background"
    tools:context="com.example.sam.d_food.DishInfo">

    <TextView android:text="AAA Restaurant" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        style="@style/my_font"
        android:background="@drawable/border_white"
        android:id="@+id/textView8" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        android:id="@+id/dishImage"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:src="@drawable/food"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:text=" Details: American Burger\n $9.00\n Location:"
        android:textSize="30dp"
        android:layout_toRightOf="@+id/dishImage"
        style="@style/my_font"
        android:id="@+id/dishInfo"
        android:layout_below="@+id/textView8"
        android:background="@drawable/border_white"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:textSize="20dp"
        android:background="@drawable/border_white"
        android:id="@+id/commentsView"
        android:layout_below="@+id/dishImage"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/dishSpinner"/>

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:id="@+id/dishSpinner"
        android:entries="@array/array_name"
        android:layout_above="@+id/addToCart"
        android:background="@drawable/border_white"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add to cart"
        android:background="@drawable/border_white"
        android:id="@+id/addToCart"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="checkout"/>



</RelativeLayout>
