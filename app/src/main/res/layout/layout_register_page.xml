<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/my_dark_red"
    tools:context="com.example.rodrigue.mywireframes.RegisterPageActivity"
    android:id="@+id/registerPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D-Food"
        android:id="@+id/textView7"
        style="@style/my_font_big_black"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/my_background"
        android:inputType="textPersonName"
        android:text="Account ID"
        android:selectAllOnFocus="true"
        android:ems="10"
        android:id="@+id/accountID"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/my_background"
        android:id="@+id/password"
        android:selectAllOnFocus="true"
        android:layout_below="@+id/accountID"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/accountID"
        android:layout_alignEnd="@+id/accountID"
        android:text="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/my_background"
        android:id="@+id/rePassword"
        android:selectAllOnFocus="true"
        android:layout_below="@+id/password"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/accountID"
        android:layout_alignEnd="@+id/accountID"
        android:text="Re-enter Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/my_background"
        android:inputType="phone"
        android:ems="10"
        android:selectAllOnFocus="true"
        android:id="@+id/address"
        android:layout_below="@+id/rePassword"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/accountID"
        android:layout_alignEnd="@+id/accountID"
        android:text="Phone number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="10dp"
        android:id="@+id/register"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/accountID"
        android:layout_alignEnd="@+id/accountID"
        android:layout_toEndOf="@+id/password" />
</RelativeLayout>
